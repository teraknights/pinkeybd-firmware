#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

&lt { tapping-term-ms = <140>; };

&mkp_input_listener { input-processors = <&zip_temp_layer 4 10000>; };

/ {
    behaviors {
        rot_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |        /       |       ,       |       .       |      -        |      ;       |    ESC         |                   |           |       L      |       R       |       D       |       Y       |      P      |
        // |        A       |       O       |       E       |      I        |      U       |    SCROLLLOCK  |                   |           |       G      |       N       |       T       |       S       |      K      |
        // |        X       |       C       |       V       |      W        |      Q       |    TAB         |                   |     F     |       J      |       H       |       M       |       B       |      Z      |
        // |    L_SHIFT     |               |               |   LOWER / Jp  |    Space     |    LEFT_WIN    |                   |  R_SHIFT  |      ENTER   |  LOWER2 / Ja  |               |               |   FUN_L     |
        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        default_layer {
            bindings = <
&kp Q      &kp W                      &kp E        &kp R      &kp T     &kp LEFT_WIN    &kp Y             &kp U          &kp I         &kp O       &kp P
&kp A      &kp S                      &kp D        &kp F      &kp G     &kp SCROLLLOCK  &kp H             &kp J          &kp K         &kp L       &kp MINUS
&kp Z      &kp X                      &kp C        &kp V      &kp B     &kp LEFT_ALT    &kp N             &kp M          &kp COMMA     &kp PERIOD  &kp SLASH
&kp LCTRL  &mt LEFT_SHIFT LANGUAGE_2  &lt 1 SPACE  &lt 3 TAB  &mkp MB1  &kp ENTER       &lt 2 LANGUAGE_1  &kp BACKSPACE  &lt 5 ESCAPE
            >;

            sensor-bindings = <&rot_kp PG_DN PG_UP>;
        };

        // ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |    /           |       ,       |       END     |     （        |      ”        |    PAUSE_BREAK|                  |            |      （       |       ）     |        ↑      |        [      |      ]      |
        // |    HOME        |       C_SAVE  |       END     |       ）      |       U       |    SCROLLLOCK |                  |            |   Backspace   |       ←      |        ↓      |        →      |     DEL     |
        // |    UNDO        |       CUT     |       COPY    |       PASTE   |       Q       |    TAB        |                  |   PSCRN    |    ' / "      |    = / +     |    \ / |      |    ` / ~      |    INS      |
        // |    L_SHIFT     |               |               |       none    |    SPACE      |    LALT       |                  |   RSHIFT   |   ENTER       |       FUN_L  |               |               |    RCTRL    |
        // ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        Symbol_layer {
            bindings = <
&kp RS(MINUS)  &kp RS(NUMBER_4)  &kp RS(NUMBER_6)     &kp EQUAL          &kp SLASH                &trans          &kp RS(N7)        &kp RS(RBKT)  &kp RS(NUHS)  &kp RS(COMMA)            &kp RS(PERIOD)
&kp LBKT       &kp LS(NUMBER_3)  &kp RS(N5)           &kp RS(SEMICOLON)  &kp RS(INTERNATIONAL_1)  &kp SCROLLLOCK  &kp RS(NUMBER_2)  &kp RS(N8)    &kp RS(N9)    &kp SEMICOLON            &kp SQT
&kp RS(LBKT)   &kp RS(EQUAL)     &kp INTERNATIONAL_3  &kp EXCLAMATION    &kp MINUS                &trans          &kp LS(SQT)       &kp RBKT      &kp NUHS      &kp RS(INTERNATIONAL_3)  &kp RS(SLASH)
&trans         &trans            &trans               &trans             &trans                   &kp DELETE      &trans            &trans        &trans
            >;
        };

        // -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |    /           |       ,        |       END     |       {       |       ’      |    ESC        |                  |            |      L      |      R         |    PG_UP      |     {       |      }      |
        // |    HOME        |       C_SAVE   |       END     |       }       |       U      |    LCTRL      |                  |            |  Backspace  |    HOME        |    PG_DN      |    END      |    DEL      |
        // |    UNDO        |       CUT      |       COPY    |       PASTE   |       Q      |    TAB        |                  |      F     |    ' / "    |    = / +       |    \ / |      |    ` / ~    |    INS      |
        // |    L_SHIFT     |                |               |       BT_L    |      SPACE   |    LALT       |                  |   ENTER    |    none     |   R_SHIFT      |               |             |   R_SHIFT   |
        // -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        Number_layer {
            bindings = <
&kp RS(MINUS)  &kp N7  &kp N8  &kp N9  &kp SLASH                &trans     &kp HOME        &kp END         &none         &none            &kp DELETE
&kp N0         &kp N4  &kp N5  &kp N6  &kp RS(INTERNATIONAL_1)  &kp LCTRL  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &kp PAGE_UP
&kp PERIOD     &kp N1  &kp N2  &kp N3  &kp MINUS                &trans     &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT  &kp PAGE_DOWN
&trans         &trans  &trans  &trans  &kp PSCRN                &trans     &trans          &trans          &trans
            >;
        };

        // --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |        1       |      2        |       3       |       4       |       5       |    ESC        |               |            |      6       |      7        |       8       |       9       |       0       |
        // |        !       |      @        |       #       |       $       |       %       |    none       |               |            |      ^       |      &        |       *       |       (       |       )       | 
        // |        F1      |     F2        |     F3        |       F4      |       F5      |    TAB        |               |     F11    |    ' / "     |    = / +      |    \ / |      |    ` / ~      |       INS     |
        // |    L_SHIFT     |               |               | En / LOWER    |    Space      |    LSIHT      |               |   R_SHIFT  |      ENTER   |     none      |               |               |       R_SHIFT |
        // --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        Funk_layer {
            bindings = <
&kp LANG_ZENKAKUHANKAKU  &kp F7  &kp F8  &kp F9  &kp F10  &trans  &kp INT_MUHENKAN  &kp INT_HENKAN  &none   &none  &none
&none                    &kp F4  &kp F5  &kp F6  &kp F11  &none   &none             &none           &none   &none  &none
&none                    &kp F1  &kp F2  &kp F3  &kp F12  &trans  &none             &none           &none   &none  &none
&trans                   &trans  &trans  &trans  &none    &trans  &trans            &none           &trans
            >;
        };

        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |     F1      |     F2     |     F3     |     F4     |    F5      |    none    |                |            |    F6      |    F7      |    F8      |    F9       |     F10     |
        // |     F11     |     F12    |     F13    |     F14    |    F15     |    none    |                |   none     |    F16     |    F17     |    F18     |    F19      |     F20     |
        // |     none    |    none    |    none    |    none    |   none     |    none    |                |   none     |    none    |    none    |    none    |    none     |     none    |
        // |     L_SHIFT |    none    |    none    |    none    |   none     |    none    |                |   none     |    none    |    none    |    none    |    none     |     R_SHIFT |
        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        automouse_layer {
            bindings = <
&none   &none   &none   &none  &none     &trans    &mkp MB2  &none   &none   &none  &none
&none   &none   &none   &none  &none     &trans    &mkp MB2  &none   &none   &none  &none
&none   &none   &none   &none  &none     &trans    &none     &none   &none   &none  &none
&trans  &trans  &trans  &none  &mkp MB1  &mkp MB1  &trans    &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp DOWN_ARROW UP_ARROW>;
        };

        // --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |    none    |    none    |    none    |    none    |   none     |    none    |                  |            |    none    |    none    |    none    |   none     |    none    |
        // |  BT_SEL 0  |  BT_SEL 1  |  BT_SEL 2  |  BT_SEL 3  |   none     |    none    |                  |            |    none    |    none    |    none    |   BT_CLR   | BT_CLR_ALL |
        // |    none    |    none    |    none    |    none    |   none     |    none    |                  |    none    |    none    |   BT_PRV   |    none    |   BT_NXT   |    none    |
        // |    none    |    none    |    none    |    none    |   none     |    none    |                  |    none    |    none    |    none    |    none    |   none     |    none    |
        // --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        Bt_layer {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &bt BT_SEL 5  &none  &none       &none  &bt BT_CLR  &bt BT_CLR_ALL
&bt BT_SEL 0  &bt BT_SEL 4  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &none         &none  &bt BT_PRV  &none  &bt BT_NXT  &none
&bt BT_CLR    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &none         &none         &none  &none       &none  &none       &none
&none         &none         &none         &none         &none         &none         &none  &none       &none
            >;
        };
    };
};
